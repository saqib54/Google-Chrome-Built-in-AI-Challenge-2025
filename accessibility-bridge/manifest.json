{
  "manifest_version": 3,
  "name": "Accessibility Bridge",
  "version": "1.0.0",
  "description": "AI-powered accessibility enhancement using Chrome's built-in AI APIs",
  
  "permissions": [
    "activeTab",
    "storage",
    "aiLanguageModelOriginTrial",
    "aiSummarizer",
    "aiWriter",
    "aiRewriter",
    "aiTranslator"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Accessibility Bridge"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/accessibility.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  

  
  "web_accessible_resources": [
    {
      "resources": ["content/accessibility.css", "content/ai-utils.js"],
      "matches": ["<all_urls>"]
    }
  ]
}